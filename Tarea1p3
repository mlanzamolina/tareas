#include <iostream>
#include <conio.h>
using namespace std;


int main()
{
	bool salir =true;
	int numPal[4];
	int numPalC[4];
	while (salir) {
		int numero;
		int menu;
		system("cls");
		cout << "Ingrese \n0 - 4.26 \n1 - 4.27\n2 - 2.29\n=";

		cin >> menu;
		switch (menu) {
		case 0:
		{
			//ejercicio 4.26 Palindromo ej, 12321 33333 
			
			bool esPal = true;
			int y = 0;
			cout << "\nEjercicio 4.26\n";
			cout << "ingrese cinco digitos: " << endl;
			for (int i = 0; i <=4; i++)
			{
				cout << "[" << i+1 << "] =";
				cin >> numPal[i];
				cout << "\n";
			}
			
			for (int x = 4; x >= 0; x--)
			{

				if (numPal[x] != numPal[y])
				{
					esPal = false;
					if (esPal = false)
					{
						break;

					}
				}
				y++;
			}
			if (esPal)
			{
				cout << "\nEs Palindromooooo!!!";
				for (int i = 0; i <= 4; i++)
				{
					cout<<"\n["<<numPal[i]<<"]\n";


				
				}
				cout << "\nEs igual a...\n ";
				for (int i = 4; i >= 0; i--)
				{
					cout << "\n[" << numPal[i] << "]\n";



				}
			}
			else
			{
				cout << "\nNo es palindromoooo :(";
				for (int i = 0; i <= 4; i++)
				{
					cout << "\n[" << numPal[i] << "]\n";



				}
				cout << "\nNo es igual a...\n ";
				for (int w = 4; w >= 0; w--)
				{
					cout << "\n[" << numPal[w] << "]\n";



				}
			}
			
			break;
