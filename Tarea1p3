				cout << "Entero\t\tCuadrado\tCubo\n";
				cout << temp << "\t\t" << pow(temp, 2) << "\t\t" << pow(temp,3) << endl;
				temp = temp + 1;
				
			}
			break;
		}
		default:
			cout << "ingrese 0 al 3";
			
		}


		int salirn=0;
		cout << "\nSalir? 1-si 2-no\n=";
